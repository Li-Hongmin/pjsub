{
  "name": "pjsub",
  "displayName": "pjsub",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Li-Hongmin/pjsub.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pjworker.startMonitoring",
        "title": "[PJ] Start Resource Monitoring"
      },
      {
        "command": "pjworker.stopMonitoring",
        "title": "[PJ] Stop Resource Monitoring"
      },
      {
        "command": "pjworker.generateAndSubmitScript",
        "title": "[PJ] Gen & Submit!"
      },
      {
        "command": "pjworker.generateShScript",
        "title": "[PJ] Gen!"
      },
      {
        "command": "pjworker.submitTask",
        "title": "[PJ] Submit Task",
        "icon": {
          "light": "resources/light/rocket.svg",
          "dark": "resources/dark/rocket.svg"
        }
      },
      {
        "command": "pjworker.checkUsage",
        "title": "[PJ] Check Usage",
        "icon": {
          "light": "resources/light/monitor.svg",
          "dark": "resources/dark/monitor.svg"
        }
      },
      {
        "command": "pjworker.startInteractiveSession",
        "title": "[PJ] Start Interactive",
        "icon": {
          "light": "resources/light/session.svg",
          "dark": "resources/dark/session.svg"
        }
      },
      {
        "command": "pjworker.startMonitoringService",
        "title": "[PJ] Start Monitoring Service"
      },
      {
        "command": "pjworker.stopMonitoringService",
        "title": "[PJ] Stop Monitoring Service"
      },
      {
        "command": "pjworker.showDashboard",
        "title": "[PJ] Show Resource Dashboard"
      },
      {
        "command": "pjworker.startTaskMonitor",
        "title": "[PJ] Start Task Monitoring"
      },
      {
        "command": "pjworker.stopTaskMonitor",
        "title": "[PJ] Stop Task Monitoring"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "pjworker.generateAndSubmitScript",
          "when": "resourceLangId == python",
          "group": "navigation"
        },
        {
          "command": "pjworker.submitTask",
          "when": "resourceLangId == shellscript",
          "group": "navigation"
        },
        {
          "command": "pjworker.checkUsage",
          "when": "resourceLangId == shellscript",
          "group": "navigation"
        },
        {
          "command": "pjworker.startInteractiveSession",
          "when": "resourceLangId == shellscript",
          "group": "navigation"
        },
        {
          "command": "pjworker.generateShScript",
          "when": "resourceLangId == python",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "pjsub": [
        {
          "type": "webview",
          "id": "pjsub.resourceMonitor",
          "name": "Resource Monitor"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pjsub",
          "title": "PJSub",
          "icon": "resources/dark/icon.png"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "PJSub Settings",
      "properties": {
        "pjsub.resourceGroup": {
          "type": "string",
          "default": "short-a",
          "description": "Resource group for the PJM task."
        },
        "pjsub.nodeCount": {
          "type": "number",
          "default": 1,
          "description": "Number of nodes to request."
        },
        "pjsub.elapsedTime": {
          "type": "string",
          "default": "2:00:00",
          "description": "Maximum execution time for the PJM task."
        },
        "pjsub.projectGroup": {
          "type": "string",
          "default": "gg53",
          "description": "Project group for the PJM task."
        },
        "pjsub.joinOutput": {
          "type": "boolean",
          "default": true,
          "description": "Join output and error logs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "lucide-react": "^0.454.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "recharts": "^2.13.1"
  }
}
